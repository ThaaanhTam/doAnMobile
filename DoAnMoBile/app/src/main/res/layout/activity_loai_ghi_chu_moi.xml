<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#94EE6B"
    tools:context=".LoaiGhiChuMoi">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B2E19C"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_arrow_back_24"
            android:backgroundTint="#B1E09B"/>


        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#B1E09B"
            android:drawableRight="@drawable/baseline_check_24" />

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Ma Loai: "
          android:textSize="25sp"/>
       <EditText
           android:id="@+id/edtMaLoai"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Nhap vao ma"
           android:textSize="25sp"
           android:inputType="number"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten Loai: "
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/edtTenLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhap vao ten"
            android:textSize="25sp"
            android:inputType="text"/>

    </LinearLayout>

</LinearLayout>

